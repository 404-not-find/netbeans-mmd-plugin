<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>com.igormaznitsa</groupId>
    <artifactId>mind-map</artifactId>
    <version>1.0.0</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  
  <artifactId>nb-mind-map</artifactId>
  <version>1.0.1-SNAPSHOT</version>
  <packaging>nbm</packaging>

  <name>NetBeans Mind Map Editor plugin</name>
  <description>NetBeans editor plugin to create and edit mind maps within NetBeans IDE projects.</description>

  <url>https://github.com/raydac/netbeans-mmd-plugin</url>

  <properties>
    <nb.platform>RELEASE74</nb.platform>
  </properties>

  <profiles>
    <profile>
      <id>makeRelease</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>properties-maven-plugin</artifactId>
            <version>1.0-alpha-2</version>
            <executions>
              <execution>
                <phase>initialize</phase>
                <goals>
                  <goal>read-project-properties</goal>
                </goals>
                <configuration>
                  <files>
                    <file>build.properties</file>
                  </files>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>coverage</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <version>0.7.5.201505241946</version>
            <executions>
              <execution>
                <goals>
                  <goal>prepare-agent</goal>
                </goals>
              </execution>
              <execution>
                <id>report</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>report</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>nbm-maven-plugin</artifactId>
        <version>4.0</version>
        <extensions>true</extensions>
        <configuration>
          <encoding>UTF-8</encoding>
          <author>Igor Maznitsa</author>
          <homePageUrl>https://github.com/raydac/netbeans-mmd-plugin</homePageUrl>
          <moduleType>normal</moduleType>
          <licenseName>License Agreement for NB Mind Map</licenseName>
          <licenseFile>src/main/nbm/LICENSE-2.0.txt</licenseFile>
          <codeNameBase>com.igormaznitsa.nbmindmap/1</codeNameBase>
          <requiresRestart>true</requiresRestart>
          <keystore>private/keystore.jks</keystore>
          <keystorealias>iam</keystorealias>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>netbeans</id>
      <name>NetBeans</name>
      <url>http://bits.netbeans.org/maven2/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

